{
  "manifest_version": 3,
  "name": "Print As Is",
  "version": "0.1.0",
  "description": "Captures a full-page screenshot and prints it exactly as seen on screen.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.svg"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "print-as-is@example.com",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
